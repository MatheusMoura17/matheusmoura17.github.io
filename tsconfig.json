{
  "compilerOptions": {
    "types": [
      "react",
      "node",
      "dom-mediacapture-record"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}